<?xml version="1.0" encoding="UTF-8"?>
<onlinefs>
  <irondb>
    <connectionString><%= @mgm_fqdn %>:<%= node['ndb']['mgmd']['port'] %></connectionString>
  </irondb>

  <kafka>
    <bootstrapServers><%= @kafka_fqdn %>:<%= node['kkafka']['broker']['port'] %></bootstrapServers>
    <trustStoreLocation>/certs/onlinefs_tstore.jks</trustStoreLocation>
    <keyStoreLocation>/certs/onlinefs_kstore.jks</keyStoreLocation>
    <keyLocation>/certs/onlinefs_passwd</keyPassword>
  </kafka>

  <hopsworks>
    <token><%= @api_key %></token>
  </hopsworks>

</onlinefs>

